
def censor(text, word):
    text_2 = text.split()
    result = ''
    for words in range(len(text_2)):
        if text_2[words] == word:
            text_2[words] = '*' * len(word)
            result = ' '.join(text_2)
            print result
    return result
censor('this hack is wack hack', 'is')
